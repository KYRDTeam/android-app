<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppBarText">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppBarText.Selected">
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppThemeTranslucentStatus" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlActivated">#acb3c6</item>
        <item name="colorControlHighlight">#acb3c6</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="TextAppearance.Montserrat.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="TextAppearance.Montserrat.LimitLine" parent="TextAppearance.Montserrat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2e3957</item>
    </style>

    <style name="TextAppearance.Tab.Item" parent="TextAppearance.Montserrat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#2e3957</item>
    </style>

    <style name="TextAppearance.Montserrat.SemiBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>
    </style>

    <style name="TextAppearance.Montserrat.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>


    <style name="TextAppearance.Montserrat.SemiBold.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-SemiBoldItalic.ttf</item>
    </style>

    <style name="AlertStyle" parent="AppThemeTranslucentStatus">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="BackImage" parent="ImageStyle">
        <item name="android:src">@drawable/ic_arrow_back</item>

    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:background">?selectableItemBackground</item>

    </style>

    <style name="CustomRadioTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/swap_radio_tint_background_normal</item>
        <item name="colorControlActivated">@color/swap_radio_tint_background</item>
    </style>

    <style name="CustomCheckTheme" parent="CustomRadioTheme" />

    <style name="CustomSwitch" parent="AppThemeTranslucentStatus">
        <item name="colorControlActivated">#fea34c</item>
        <item name="colorControlNormal">#b9beca</item>
        <item name="android:colorForeground">#b9beca</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <!--        <item name="windowMinWidthMajor">100%</item>-->
        <!--        <item name="windowMinWidthMinor">100%</item>-->
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">#b9beca</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/warning_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="success_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/success_color</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
