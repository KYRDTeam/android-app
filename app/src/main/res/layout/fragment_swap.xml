                        android:textColor="#9ea1aa"
                        android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvTokenBalanceValue"
