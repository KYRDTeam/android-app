<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="token"
            type="com.kyberswap.android.domain.model.token.Token" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgToken"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dai"
                app:identifier="@{token.tokenSymbol}"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="152dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{token.tokenSymbol}"
                    android:textAllCaps="true"
                    android:textColor="#1d303a"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="143dp"
                    tools:layout_editor_absoluteY="139dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{token.displayCurrentBalance}"
                    android:textColor="#b8babe"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="@{token.displayRateEthNow}"
            android:textColor="#1d303a"
            android:textSize="16sp"
            tools:text="sdfsfdsfsdfsdfdsf" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:gravity="center|end"
            android:minWidth="60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="end"
                android:text="6.1%"
                android:textColor="#31cb9e"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</layout>
