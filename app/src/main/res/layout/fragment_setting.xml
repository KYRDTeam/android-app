<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kyberswap.android.presentation.main.profile.ProfileFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/setting"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="58dp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_bg_gray"
                android:paddingBottom="42dp">

                <LinearLayout
                    android:id="@+id/lnManageWallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgManageWallet"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_manage_wallet" />

                    <TextView
                        android:id="@+id/tvManageWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/manage_wallet"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnManageAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnManageWallet"
                    app:layout_constraintStart_toStartOf="@+id/lnManageWallet"
                    app:layout_constraintTop_toBottomOf="@+id/lnManageWallet">

                    <ImageView
                        android:id="@+id/imgManageAlert"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_manage_alert" />

                    <TextView
                        android:id="@+id/tvManageAlert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/manage_alert"
                        android:textColor="#141927"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnAlertMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnManageAlert"
                    app:layout_constraintStart_toStartOf="@+id/lnManageAlert"
                    app:layout_constraintTop_toBottomOf="@+id/lnManageAlert">

                    <ImageView
                        android:id="@+id/imgAlertMethod"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_alert_method" />

                    <TextView
                        android:id="@+id/tvAlertMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/alert_method"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnAlertMethod"
                    app:layout_constraintStart_toStartOf="@+id/lnAlertMethod"
                    app:layout_constraintTop_toBottomOf="@+id/lnAlertMethod">

                    <ImageView
                        android:id="@+id/imgContact"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_contacts" />

                    <TextView
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/setting_contact"
                        android:textColor="#141927"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnContact"
                    app:layout_constraintStart_toStartOf="@+id/lnContact"
                    app:layout_constraintTop_toBottomOf="@+id/lnContact">

                    <ImageView
                        android:id="@+id/imgSupport"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_support" />

                    <TextView
                        android:id="@+id/tvSupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/setting_support"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnChangePin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnContact"
                    app:layout_constraintStart_toStartOf="@+id/lnContact"
                    app:layout_constraintTop_toBottomOf="@+id/lnSupport">

                    <ImageView
                        android:id="@+id/imgChangePin"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_change_pin" />

                    <TextView
                        android:id="@+id/tvChangePin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/change_pin"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnAbount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnSupport"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/lnSupport"
                    app:layout_constraintTop_toBottomOf="@+id/lnChangePin">

                    <ImageView
                        android:id="@+id/imgAbout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_about" />

                    <TextView
                        android:id="@+id/tvAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/setting_about"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/lnAbount"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lnAbount"
                    app:layout_constraintTop_toBottomOf="@+id/lnAbount">

                    <ImageView
                        android:id="@+id/imgCommunity"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_language" />

                    <TextView
                        android:id="@+id/tvCommunity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/faq"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgTelegram"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="44dp"
                    android:src="@drawable/ic_setting_telegram"
                    app:layout_constraintBottom_toBottomOf="@+id/imgGithub"
                    app:layout_constraintEnd_toStartOf="@+id/imgGithub"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imgGithub" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/imgTelegramDeveloper"-->
                <!--                    android:layout_width="32dp"-->
                <!--                    android:layout_height="32dp"-->
                <!--                    android:src="@drawable/ic_telegram_developer"-->
                <!--                    app:layout_constraintBottom_toBottomOf="@+id/imgGithub"-->
                <!--                    app:layout_constraintEnd_toStartOf="@+id/imgGithub"-->
                <!--                    app:layout_constraintHorizontal_bias="0.5"-->
                <!--                    app:layout_constraintStart_toEndOf="@+id/imgTelegram"-->
                <!--                    app:layout_constraintTop_toTopOf="@+id/imgGithub" />-->

                <ImageView
                    android:id="@+id/imgGithub"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_github"
                    app:layout_constraintBottom_toBottomOf="@+id/imgFacebook"
                    app:layout_constraintEnd_toStartOf="@+id/imgFacebook"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgTelegram"
                    app:layout_constraintTop_toTopOf="@+id/imgFacebook"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imgFacebook"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_facebook"
                    app:layout_constraintBottom_toBottomOf="@+id/imgTwitter"
                    app:layout_constraintEnd_toStartOf="@+id/imgTwitter"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgGithub"
                    app:layout_constraintTop_toTopOf="@+id/imgTwitter" />

                <ImageView
                    android:id="@+id/imgTwitter"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_twitter"
                    app:layout_constraintBottom_toBottomOf="@+id/imgMedium"
                    app:layout_constraintEnd_toStartOf="@+id/imgMedium"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgFacebook"
                    app:layout_constraintTop_toTopOf="@+id/imgMedium" />

                <ImageView
                    android:id="@+id/imgMedium"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/imgLinkedin"
                    app:layout_constraintEnd_toStartOf="@+id/imgLinkedin"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgTwitter"
                    app:layout_constraintTop_toTopOf="@+id/imgLinkedin" />

                <ImageView
                    android:id="@+id/imgLinkedin"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="44dp"
                    android:src="@drawable/ic_linked_in"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgMedium"
                    app:layout_constraintTop_toBottomOf="@+id/lnCommunity" />


                <LinearLayout
                    android:id="@+id/lnShareWithFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lnCommunity"
                    app:layout_constraintTop_toBottomOf="@+id/imgFacebook">

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:id="@+id/tvShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/share_with_friends"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnRateMyApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lnCommunity"
                    app:layout_constraintTop_toBottomOf="@+id/lnShareWithFriend">

                    <ImageView
                        android:id="@+id/imgFavorite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_favorite" />

                    <TextView
                        android:id="@+id/tvFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/rate_app"
                        android:textColor="#141927"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="14sp"
                    android:textColor="#5a5e67"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/lnRateMyApp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lnRateMyApp"
                    app:layout_constraintTop_toBottomOf="@+id/lnRateMyApp"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="SmallSp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_customer_support"
            app:elevation="0dp">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/circle_chat_badge"
            android:elevation="6dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />

    </FrameLayout>


</layout>


