<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true"
        app:drag_edge="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="132dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Cancel"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Montserrat.SemiBold"
                android:textColor="#fa6566"
                android:textSize="12sp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:elevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:minHeight="114dp"
                android:padding="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/rounded_corner_rate_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:text="ETH  âžž  KNC"
                    android:textAppearance="@style/TextAppearance.Montserrat.SemiBold"
                    android:textColor="#2c2c2c"
                    android:textSize="14sp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="06 Jun 2019"
                    android:textColor="#5a5e67"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView73"
                    app:layout_constraintEnd_toStartOf="@+id/textView74"
                    app:layout_constraintStart_toEndOf="@+id/barrier5"
                    app:layout_constraintTop_toTopOf="@+id/textView73" />

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/rounded_corner_order_open_background"
                    android:gravity="center_horizontal"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:text="Open"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView72"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView72"
                    app:layout_constraintTop_toTopOf="@+id/textView72" />

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Condition"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.Montserrat.SemiBold"
                    android:textColor="#9ea1aa"
                    android:textSize="10sp"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView73" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="&gt;= 0.013"
                    android:textColor="#141927"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@+id/barrier4"
                    app:layout_constraintStart_toStartOf="@+id/textView64"
                    app:layout_constraintTop_toBottomOf="@+id/textView64" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="textView67,textView73,textView64"
                    tools:layout_editor_absoluteX="392dp"
                    tools:layout_editor_absoluteY="13dp" />

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="From"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.Montserrat.SemiBold"
                    android:textColor="#9ea1aa"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/textView70"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/barrier5"
                    app:layout_constraintTop_toTopOf="@+id/barrier3" />

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0.12587 ETH"
                    android:textColor="#141927"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/barrier4"
                    app:layout_constraintStart_toStartOf="@+id/textView68" />

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="91.119293 KNC"
                    android:textColor="#141927"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@+id/barrier4"
                    app:layout_constraintStart_toStartOf="@+id/textView70" />

                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="TO"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.Montserrat.SemiBold"
                    android:textColor="#9ea1aa"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView68"
                    app:layout_constraintTop_toTopOf="@+id/barrier3" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="top"
                    app:constraint_referenced_ids="textView64,textView67"
                    tools:layout_editor_absoluteX="411dp" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="textView64,textView67"
                    tools:layout_editor_absoluteX="411dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </com.daimajia.swipe.SwipeLayout>


</layout>
