                                <!--android:theme="@style/CustomRadioTheme"-->
                                <!--app:font="@{@string/semi_bold_font_path}"-->
                                <!--app:styleBold="@{send.gas.fast}" />-->


                            </RadioGroup>

                        </LinearLayout>


                    </net.cachapa.expandablelayout.ExpandableLayout>

